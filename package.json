{
  "name": "tca-timer-desktop",
  "version": "1.0.8",
  "repository": "https://github.com/TCANationals/timer-desktop.git",
  "description": "TCA Timer Desktop App",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.tcanationals.timer-desktop",
    "productName": "TCA Timer",
    "publish": {
      "provider": "github"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "maintainer": "TCA Nationals",
      "category": "Utility"
    },
    "win": {
      "target": {
        "target": "nsis-web",
        "arch": [
          "x64"
        ]
      }
    },
    "mac": {
      "target": [
        {
          "target": "dmg"
        }
      ]
    },
    "nsis": {
      "createDesktopShortcut": false,
      "runAfterFinish": false,
      "perMachine": true
    },
    "nsisWeb": {
      "oneClick": true
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^9.5.0",
    "menubar": "^9.2.3"
  },
  "devDependencies": {
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0"
  }
}
